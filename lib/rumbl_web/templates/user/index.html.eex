<%=Phoenix.HTML.Link.link("[NOVO]", to: Routes.user_path(@conn, :new))%>

<div class="container">
    <table class="table table-hover">
        <%= for user <- @users do%>
        <tr>
            <td><%= render "user.html", user: user %></td>
            <td><%= link "View", to: Routes.user_path(@conn, :show, user.id) %></td>
